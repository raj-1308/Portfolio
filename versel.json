{
  "version": 3,
  "name": "portfolio",
  "builds": [
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "build" }
    },
    {
      "src": "backend/server.cjs",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/backend/server.cjs"
    },
    {
      "src": "/(.*)",
      "dest": "/client/$1"
    }
  ]
}
