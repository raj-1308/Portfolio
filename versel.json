{
  "version": 2,
  "builds": [
    {
      "src": "backend/server.cjs",
      "use": "@vercel/node"
    },
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "build" }
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "backend/server.cjs" }
  ]
}
